{
  "manifest_version": 2,
  "name": "web-skeleton",
  "version": "1.0",
  "description": "create web skeleton in first screen",
  "background": {
    "scripts": ["dist/background.js"]
  },
  "browser_action": {
    "default_popup": "dist/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "dist/content.js"
      ]
    }
  ],

  "permissions": [
    "contextMenus",
    "notifications",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "content_security_policy": "script-src 'self' https://cdn.bootcss.com 'unsafe-eval'; object-src 'self'"
}
